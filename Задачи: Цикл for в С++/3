/* На складе имеется определённое количество ящиков с яблоками (в нашем примере 15).
Когда подъезжает машина для погрузки, попросить пользователя ввести,
сколько ящиков загрузить в первую машину,  во вторую и так далее,
пока не закончатся ящики с яблоками. Предусмотреть тот случай, 
когда пользователь введёт количество ящиков больше, чем есть на складе.*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int tara = 0,pogryz=0;
	cout << "\nВведите количесто ящиков имеющихся на складе : "; cin >> tara;
	for (int i=1;;i++) {
		cout << "\nВведите кодичество ящиков которые будут погруження в машину № " << i <<" : " << endl; cin >> pogryz;
		if (tara - pogryz > 0 ) {
			tara -= pogryz;
			cout << "На складе осталось :" << tara << " ящиков\n";		
		}
		else if (tara - pogryz < 0) {
			cout << "на складе не достаточно ящиков для выполнения этого\n На складе " << tara << " ящиков\n Введите кодичество меньше или ровно количеству оставшихся\n";
		}
		else if (tara - pogryz == 0) {
			cout << "На складе больше нету ящиков\n";
			break;
		}
	}
	system("pause");
}
