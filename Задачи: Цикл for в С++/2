/* В спортзал ежедневно приходит какое-то количество посетителей.
Необходимо предложить пользователю ввести такие данные:
сколько человек посетило спортзал за день, ввести возраст 
каждого посетителя и в итоге показать возраст самого старшего
и самого молодого из них, а так же посчитать средний возраст посетителей.*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int men = 0, vek = 0, Maxvek = 0, Midvek = 0;
	char exit='Y';
	for (;;) {
		cout << "\n продолжить -- Y\t  --выйти N \n";
		cin >> exit;
		if (exit != 'y' && exit != 'Y')
			break;
		cout << "\n Введите количество людей прищедних сегодня в спортзал :"; cin >> men;
		for (int i = 1; i <= men; i++) {
			cout << "Введите возраст № " << i << " посетителя :"; cin >> vek;
			if (vek > Maxvek) {
				Maxvek = vek;
			}
			Midvek += vek;
		}
		Midvek /= men;
		cout << "сегодня спортаз посетило " << men << " человек\n Максимальный возраст посетителя составил " << Maxvek<<"\n средний возраст посетителя составляет "<<Midvek;
	}
	system("pause");
}
