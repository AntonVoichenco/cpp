/*Составить расписание на неделю. 
Пользователь вводит порядковый номер дня недели
и у него на экране отображается, то, что запланировано на этот день.*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int numberDay = 0;
	bool var = true;
	do {
	cout << "Введите порядковый номер дня недели(1--7) или 0 для выхода из программы : "; cin >> numberDay;
		switch (numberDay)
		{
		case 1:
			cout << "Понедельник\n план\n 1.Сходить на пары\n 2.Выгулять собаку\n 3.Посмотреть телевизор\n";
			break;
		case 2:
			cout << "Вторник\n план\n 1.Сходить на пары\n 2.Погулять\n 3.Сделать домашку\n";
			break;
		case 3:
			cout << "Среда\n план\n 1.Сходить на пары\n 2.Поиграть в игры\n 3.Почитать книгу\n";
			break;
		case 4:
			cout << "Четверг\n план\n 1.Сходить на пары\n 2.Выгулять собаку\n 3.Раньше лечь спать\n";
			break;
		case 5:
			cout << "Пятница\n план\n 1.Сходить на пары\n 2.Сделать индивидуалки\n 3.Встретится с друзьями\n";
			break;
		case 6:
			cout << "Суббота\n план\n 1.Повалятся и посмотреть ютуб\n 2.Выгулять собаку\n ";
			break;
		case 7:
			cout << "Воскресенье\n план\n 1.Подготовить индивидуалки к понедельнику\n 2.Выгулять собаку\n 3.Лечь раньше спать\n";
			break;
		default:
			if (numberDay == 0)
				var = false;
		}
	} while (var);
	system("pause");
}
