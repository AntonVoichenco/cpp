/*Создайте 4 переменные с разными типами данных и предложите 
пользователю ввести в них значения. После ввода, отобразите их на экране.*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int a = 0;
	double b = 0.0;
	char c = 0;
	bool d = 0;
	cout << "Введите четыре переменные\n";
	cout << " целое число -"; cin >> a;
	cout << " вещественное число -"; cin >> b;
	cout << " символ-"; cin >> c;
	cout << "  0 или 1(любое другое число) -"; cin >> d;
	cout << a << ";" << b << ";" << c << ";" << d << ";\n";
	system("pause");
}
