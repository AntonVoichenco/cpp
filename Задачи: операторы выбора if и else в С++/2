/*Пользователь вводит порядковый номер пальца руки.
Необходимо показать его название на экран.*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	cout << "Введите порядковый номер пальца(отсчёт начинается от большоно пальца со стороны ладони)\n ";
	cout << "от 1 до 5 - левая рука\t от 6 до 10 - правая рука\n";
	int num = 0;
	cin >> num;
	if (num <= 5) {
		if (num <= 4) {
			if (num <= 3) {
				if (num <= 2) {
					if (num <= 1) {
						if (num<=0) {
							cout << "вы не выбрали число из указаных в условии\n";
						}
						else {
							cout << "вы ввели большой палец левой руки\n";
						}
					}
					else {
						cout << "вы ввели указательный палец левой руки\n";
					}
				}
				else {
					cout << "вы выбрали средний палец левой руки\n";
				}
			}
			else {
				cout << "вы выбрали безымянный палец левой руки\n";
			}
	}
		else {
			cout << "вы выбрали мизинет левой руки \n";
		}
	}
	else {
		if (num >= 7) {
			if (num >= 8) {
				if (num >= 9) {
					if (num >= 10) {
						if (num >= 11) {
							cout << "вы не выбрали число из указаных в условии\n";
						}
						else {
							cout << "вы ввели большой палец правой руки\n";
						}
					}
					else {
						cout << "вы ввели указательный палец правой руки\n";
					}
				}
				else {
					cout << "вы выбрали средний палец правой руки\n";
				}
			}
			else {
				cout << "вы выбрали безымянный палец правой руки\n";
			}
		}
		else {
			cout << "вы выбрали мизинет правой руки \n";
		}
	}
	system("pause");
}
