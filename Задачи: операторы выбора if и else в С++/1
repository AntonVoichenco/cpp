/*Первая задача интересная и достаточно простая.
Но код получится длинным.
Эту задачу придумали наши преподаватели из компьютерной академии.
Идея была такая – как бы заставить начинающих студентов 
помучиться с написанием кода, чтобы писанины было побольше )))
Задание: Пользователь вводит число от 1 до 9999 (сумму выдачи в банкомате).
Необходимо вывести на экран словами введенную сумму и в конце написать 
название валюты с правильным окончанием. Например: 7431 – семь тысяч
четыреста тридцать один доллар, 2149 – две тысячи сто сорок девять долларов,
15 – пятнадцать долларов, 3 – три доллара. Для решения этой задачи вам
необходимо будет применять оператор % (остаток от деления). Почитать о
нем можно в статье Арифметические операции в C++  . Приступайте!*/
#include<iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "ru");
	int num = 0, num2;
	cout << "Введите число от 1 до 9999\n \t число : "; cin >> num;
	num2 = num / 1000;
	num %= 1000;
	if (num2 > 0) {
		if (num2 == 9) {
			cout << "девять тысяч\t";
		}
		else if (num2 == 8) {
			cout << "восемь тысяч\t";
		}
		else if (num2 == 7) {
			cout << "семь тысяч\t";
		}
		else if (num2 == 6) {
			cout << "шесть тысяч\t";
		}
		else if (num2 == 5) {
			cout << "пять тысяч\t";
		}
		else if (num2 == 4) {
			cout << "четыре тысячи\t";
		}
		else if (num2 == 3) {
			cout << "три тысячи\t";
		}
		else if (num2 == 2) {
			cout << "две тысячи\t";
		}
		else if (num2 == 1) {
			cout << "одна тысяча\t";
		}
	}
	num2 = num / 100;
	num %= 100;
	
	if (num2 > 0) {
		if (num2 == 9) {
			cout << "девятьсот\t";
		}
		else if (num2 == 8) {
			cout << "восемьсот\t";
		}
		else if (num2 == 7) {
			cout << "семьсот\t";
		}
		else if (num2 == 6) {
			cout << "шестьсот\t";
		}
		else if (num2 == 5) {
			cout << "пятьсот\t";
		}
		else if (num2 == 4) {
			cout << "четыреста\t";
		}
		else if (num2 == 3) {
			cout << "триста\t";
		}
		else if (num2 == 2) {
			cout << "двесте\t";
		}
		else if (num2 == 1) {
			cout << "сто\t";
		}
	}
	int num3 = num;
	num2 = num / 10;
	num %= 10;
	if (num2 > 1) {
		if (num2 == 9) {
			cout << "девяносто\t";
		}
		else if (num2 == 8) {
			cout << "весемдесят\t";
		}
		else if (num2 == 7) {
			cout << "семдесят\t";
		}
		else if (num2 == 6) {
			cout << "шестьдесят\t";
		}
		else if (num2 == 5) {
			cout << "пятьдесят\t";
		}
		else if (num2 == 4) {
			cout << "сорок\t";
		}
		else if (num2 == 3) {
			cout << "тридцыть\t";
		}
		else if (num2 == 2) {
			cout << "двадцыть\t";
		}	
	}
	if ( num3 > 9 && num2 == 1) {
			if (num > 0) {
				if (num3 == 19) {
					cout << "девятнадцать\t";
				}
				else if (num3 == 18) {
					cout << "весемьнадцать\t";
				}
				else if (num3 == 17) {
					cout << "семьнадцать\t";
				}
				else if (num3 == 16) {
					cout << "шестнадцать\t";
				}
				else if (num3 == 15) {
					cout << "пятнадцать\t";
				}
				else if (num3 == 14) {
					cout << "четырнадцать\t";
				}
				else if (num3 == 13) {
					cout << "тринадцать\t";
				}
				else if (num3 == 12) {
					cout << "двинадцать\t";
				}
				else if (num3 == 11) {
					cout << "одинадцять\t";
				}
			}
			else if (num3 == 10) {
				cout << "десять\t";
			}
	}
	if (num3 > 20 && num > 0) {
		if (num == 9) {
			cout << "девять долларов\t";
		}
		else if (num == 8) {
			cout << "восемь долларов\t";
		}
		else if (num == 7) {
			cout << "семь долларов\t";
		}
		else if (num == 6) {
			cout << "шесть долларов\t";
		}
		else if (num == 5) {
			cout << "пять долларов\t";
		}
		else if (num == 4) {
			cout << "четыре доллара\t";
		}
		else if (num == 3) {
			cout << "три доллара\t";
		}
		else if (num == 2) {
			cout << "два доллара\t";
		}
		else if (num == 1) {
			cout << "один доллар\t";
		}
	}
	else {
		cout << " долларов\t";
	}
	 
	system("pause");
}
